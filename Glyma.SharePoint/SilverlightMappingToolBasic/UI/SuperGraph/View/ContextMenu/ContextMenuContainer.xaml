<UserControl x:Class="SilverlightMappingToolBasic.UI.SuperGraph.View.ContextMenu.ContextMenuContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:contextMenu="clr-namespace:SilverlightMappingToolBasic.UI.SuperGraph.View.ContextMenu"
    xmlns:arrow="clr-namespace:SilverlightMappingToolBasic.UI.SuperGraph.View.Arrow"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Canvas x:Name="LayoutRoot">
        <contextMenu:SuperGraphControlContextMenu x:Name="ContextMenu" Visibility="Collapsed"/>
        <contextMenu:MultiNodesContextMenu x:Name="MultiNodesContextMenu" Visibility="Collapsed"/>
        <contextMenu:AuthorNodeControlContextMenu x:Name="AuthorContextMenu" Visibility="Collapsed"></contextMenu:AuthorNodeControlContextMenu>
        <contextMenu:ViewerNodeControlContextMenu x:Name="ViewerContextMenu" Visibility="Collapsed"></contextMenu:ViewerNodeControlContextMenu>
        <arrow:ArrowContextMenu x:Name="ArrowContextMenu" Visibility="Collapsed"/>
    </Canvas>
</UserControl>
