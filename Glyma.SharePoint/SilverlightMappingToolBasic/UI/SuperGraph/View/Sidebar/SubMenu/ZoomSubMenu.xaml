<UserControl x:Class="SilverlightMappingToolBasic.UI.SuperGraph.View.Sidebar.SubMenu.ZoomSubMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sidebar="clr-namespace:SilverlightMappingToolBasic.UI.SuperGraph.View.Sidebar"
    xmlns:subMenu="clr-namespace:SilverlightMappingToolBasic.UI.SuperGraph.View.Sidebar.SubMenu"
    mc:Ignorable="d"
    d:DesignHeight="120" d:DesignWidth="130" MouseLeave="UserControl_MouseLeave">
    <Border BorderBrush="#ff848788" Background="#FFFFFFFF" BorderThickness="0" CornerRadius="3,3,3,3">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Color="Black"
            Direction="135" Opacity="0.5" ShadowDepth="2">
            </DropShadowEffect>
        </Border.Effect>
        <StackPanel Orientation="Vertical" Name="SubMenu" Background="White" Margin="3">
            <subMenu:SidebarSubMenuButton Icon="/SilverlightMappingToolBasic;component/Images/SidebarIcon/ZoomMenu/zoom-in.png" HoverIcon="/SilverlightMappingToolBasic;component/Images/SidebarIcon/ZoomMenu/zoom-in-hover.png" x:Name="ZoomIn"></subMenu:SidebarSubMenuButton>
            <subMenu:SidebarSubMenuButton Icon="/SilverlightMappingToolBasic;component/Images/SidebarIcon/ZoomMenu/100percent.png" HoverIcon="/SilverlightMappingToolBasic;component/Images/SidebarIcon/ZoomMenu/100percent-hover.png" x:Name="Default"></subMenu:SidebarSubMenuButton>
            <subMenu:SidebarSubMenuButton Icon="/SilverlightMappingToolBasic;component/Images/SidebarIcon/ZoomMenu/zoom-out.png" HoverIcon="/SilverlightMappingToolBasic;component/Images/SidebarIcon/ZoomMenu/zoom-out-hover.png" x:Name="ZoomOut"></subMenu:SidebarSubMenuButton>
        </StackPanel>
    </Border>
</UserControl>
